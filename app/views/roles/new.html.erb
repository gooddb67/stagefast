<h4>Enter your new role here:</h4></br>


<%= form_for @role do |r| %>
  <%= r.hidden_field :production_id %>
  <%= r.label :name %>
  <%= r.text_field :name, class: "form-control" %><br>
  <%= r.label :description %>
  <%= r.text_area :description, class: "form-control" %><br>
  <%= r.submit class: "btn btn-primary" %>
<% end %>
