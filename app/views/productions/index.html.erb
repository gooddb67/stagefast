<p id="notice"><%= notice %></p>

<h1>Productions</h1>
<h3><%= @user.name %></h3>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Production type</th>
      <th>Budget</th>
      <th>Date begin</th>
      <th>Date end</th>
      <th>Roles Cast</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= production.title %></td>
        <td><%= production.production_type %></td>
        <td><%= production.budget %></td>
        <td><%= production.date_begin %></td>
        <td><%= production.date_end %></td>
        <td><%= link_to "#{production.filled_roles.size} / #{production.roles.size}", "/productions/#{production.id}/assign_roles" %> </td>
        <td><%= link_to 'Show', production %></td>
        <td><%= link_to 'Edit', edit_production_path(production) %></td>
        <td><%= link_to 'Destroy', production, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Production', new_production_path %> |
<%= link_to 'All Actors', actors_path %><br><br>
<%= button_to "Sign Out", "/signout" %>
