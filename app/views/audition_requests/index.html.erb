<p id="notice"><%= notice %></p>

<h1>Your Audition Requests</h1>
<%= image_tag(@actor.headshot.thumb.url, alt: 'Headshot') unless @actor.headshot.blank? %>
<h3><%=@actor.name%></h3>
<br><br>
<!-- Outstanding audition requests -->
<%= form_tag '/audition_requests_update', method: 'post' do %>
  <table>
    <thead>
      <h3>Outstanding Audition Requests</h3>
      <% if @outstanding_audition_requests.empty? %>
        <h4>You have no ouststanding audition requests.</h4>
      <% else %>
        <tr>
          <th>Role</th>
          <th>Production</th>
          <th>Accepted?</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @outstanding_audition_requests.each do |audition_request| %>
          <tr>
            <td><%= audition_request.role.name %></td>
            <td><%= audition_request.role.production.title %></td>
            <td><%= check_box_tag 'audition_request_ids[]', audition_request.id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= submit_tag "Accept Audtions" %>
  <% end %>
<% end %>
<!-- Outstanding audition requests -->

<br><br>

<!-- Accepted requests -->
<table>
  <thead>
    <h3>Previously Accepted Audition Requests</h3>
    <% if @accepted_audition_requests.empty? %>
      <h4>You have not previously accepted any auditions.</h4>
    <% else %>
      <tr>
        <th>Role</th>
        <th>Production</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @accepted_audition_requests.each do |audition_request| %>
        <tr>
          <td><%= audition_request.role.name %></td>
          <td><%= audition_request.role.production.title %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<!-- Accepted requests -->
<%= link_to "My Profile", user_path(@actor) %><br></br>
<%= button_to "Sign Out", "/signout" %>





<br>
