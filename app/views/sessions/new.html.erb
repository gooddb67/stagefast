<html lang="en">
<head>
  <meta charset="utf-8">

  <link rel="stylesheet" href="/sessions.css">

</head>
<body>
  <br>



      <h1>Stagefast</h1>

<!-- Jumbotron -->

  <% if flash[:notice] %>
  <div class="alert alert-danger">
    <div class="notice"><%= flash[:notice] %></div>
  </div>
  <% end %>

  <%=form_tag('/signin', method: "post") do%>
  <div class="col-sm-2">
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, class: "form-control"%>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: 'form-control' %>
      <br>
        <%= submit_tag "Sign In", class: "btn btn-default" %>
        <% end %>
    </div>
  </div>


  <br><br>

</body>
</html>
