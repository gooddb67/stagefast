<%= form_with(model: @user, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :base_salary %>
    <%= form.number_field :base_salary, id: :user_base_salary, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :user_bio, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :headshot %>
    <%= form.file_field :headshot, id: :user_headshot%>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-primary"%>
  </div>
<% end %>
